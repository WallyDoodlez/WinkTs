{
  "compileOnSave": true,
  "compilerOptions": {
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noEmitOnError": true,
    "removeComments": false,
    "experimentalDecorators": true,
    "sourceMap": true,
    "outDir": "www/scripts/",
    "target": "es5",
    "module": "system",
    "typeRoots": [
      "www/scripts/lib/@types/"
    ]
  },

  "exclude": [
    "www",
    "www/scripts",
    "node_modules",
    "bower_components",
    "platforms",
    "bld"
  ]
}
